extends layout

block content
  h1 Create a New Book

  include errors

  form(method='post' action='/books')
    if book
      if book.title
        p
          label (for='title') Title
          input#title(name='title' type='text' value=book.title)
      else
        p
          label(for='title') Title
          input#title(name='title' type='text')
      if book.author
        p
          label(for='author') Author
          input#author(name='author' type='text' value=book.author)
      else
        p
          label(for='author') Author
          input#author(name='author' type='text')
      if book.genre
        p
          label(for='genre') Genre
          input#author(name='genre' type='text' value=book.genre)
      else
        p
          label(for='genre') Genre
          input#author(name='genre' type='text')
      if book.year
        p
          label(for='year') Year
          input#author(name='year' type='text' value=book.year)
      else
        p
          label(for='year') Year
          input#author(name='year' type='text')  
      p
        input(type='submit' value='Create New Book')
      p
        a.button(href='/books') Cancel 
    else 

      p 
        label(for='title') Title
        input#title(name='title' type='text')
      p
        label(for='author') Author
        input#author(name='author' type='text')
      p
        label(for='genre') Genre
        input#genre(name='genre' type='text')
      p
        label(for='year') Year
        input#year(name='year' type='text')
      p
        input(type='submit' value='Create New Book')
      p
        a.button(href='/books') Cancel